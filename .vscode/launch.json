  "version": "0.2.0",
  "configurations": [

    {
      "name": "Run debug/main.go",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/debug/main.go"
    },
    {
      "name": "Run cmd/main.go",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/main.go"
    },
    {
      "name": "Launch Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      // "program": "${fileDirname}"
      "program": "${workspaceFolder}"
    },
    {
      "name": "Launch file",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${file}"
    }
  ]
}